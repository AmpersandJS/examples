<div>
    <ul>
        <li>Name: {{model.name}}</li>
        <li>Age: {{model.age}}</li>

        <!-- expressions use a lispy syntax to ensure bindings are maintained -->
        <!-- see the domthing docs for more -->
        {{#if (== (% model.age 2) 0)}}
          <li>An even number of years!</li>
        {{#else}}
          <li>An odd number of years!</li>
        {{/if}}
    </ul>
</div>
